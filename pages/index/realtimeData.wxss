page {
  background: #F7F7F7;
  height: 100%;
}

.container {
  padding-bottom: 50rpx;
}

.button-view{
  display: flex;
  flex-direction: row;
	padding: 20rpx 32rpx 0;
	justify-content: space-between;
}

.button-view{
  display: flex;
  flex-direction: row;
  padding: 20rpx 32rpx 0;
}


.btn{
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 15rpx;
  height: 80rpx;
  background-color: rgba(118,188, 254, 1);
	color: white;
	margin: 0;
	width: 45%;
}

.normal-btn{
	display: flex;
	justify-content: center;
	align-items: center;
	border-radius: 15rpx;
	height: 80rpx;
	background-color: rgba(118,188, 254, 1);
	color: white;
	width: 100%;
}

.label-view{
  display: flex;
  flex-direction: column;
  padding: 20rpx 32rpx;
}

.switch-view{
  margin: 5rpx 32rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-bottom:1rpx solid rgba(195,203, 214, 1);
  padding: 15rpx 0;
}

.item-label{
	color: rgba(0, 0, 0, .8);
}

.item-right{
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: flex-end;
	height: 60rpx;
	width: 50%;
}

.right-arrow{
	width: 15rpx;
	height: 27rpx;
}